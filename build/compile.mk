PROJECT_BUILD_DIR := $(OUTPUT_DIR)/$(PROJECT)
PROJECT_SRC_DIR := $(PROJECT_DIR)/$(PROJECT)

$(PROJECT): $(PROJECT_BUILD_DIR) $(PROJECT).bin
	echo done

$(PROJECT_BUILD_DIR):
	mkdir -p $(PROJECT_BUILD_DIR)

PROJECT_SRC_C := $(addprefix $(PROJECT_SRC_DIR)/, $(filter %.c, $(PROJECT_SRC)))
PROJECT_SRC_S := $(filter %.s, $(PROJECT_SRC))
PROJECT_OBJECTS_C := $(PROJECT_BUILD_DIR)/$(patsubst %.c,%.o, $(filter %.c, $(PROJECT_SRC)))
PROJECT_OBJECTS_S := $(PROJECT_BUILD_DIR)/$(patsubst %.s,%.o, $(PROJECT_SRC_S))

$(PROJECT_OBJECTS_C): $(PROJECT_SRC_C)
	$(CC) $(GLOBAL_CFLAGS) $(CFLAGS) $(GLOBAL_DEFINES) $(NO_LINKER) $(INCLUDE_DIR) -o $@ $<

$(PROJECT_OBJECTS_S): $(PROJECT_SRC_S)
	echo NEEDS TO BE COMPLETED

$(PROJECT).bin: $(PROJECT_OBJECTS_C)
	echo $(PROJECT_OBJECTS_C)
